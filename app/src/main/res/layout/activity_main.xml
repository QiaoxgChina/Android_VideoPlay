<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ywkd.admin.videoplayproject.activity.MainActivity">

    <Button
        android:id="@+id/videoView_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play One Video By VideoView"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/mediaPlayer_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play One Video By MediaPlayer"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/mediaPlayerMVP_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play One Video By MediaPlayer(MVP)"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/playMoreOneVideoAtOnce_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Mutiple Videos By VideoView"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/playMutipleVideoAtOnce_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Mutiple Videos By MediaPlayer"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/verticalScreen_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vertical Screen"
        android:textAllCaps="false"/>

</LinearLayout>
